<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kontaktandmed.ContactsPage"
             Title="Kontaktide nimekiri">

    <ContentPage.ToolbarItems>
        <!-- Кнопка для добавления нового контакта -->
        <ToolbarItem Text="Lisa kontakt" Clicked="OnAddContactClicked"/>
    </ContentPage.ToolbarItems>

    <TableView Intent="Form" x:Name="contactsTableView">
        <TableRoot>
            <TableSection Title="Kontaktid" x:Name="contactsTableSection">
                <!-- Контакты будут добавляться сюда -->
            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>
